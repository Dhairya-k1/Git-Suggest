{
  "name": "git-suggest",
  "displayName": "Git Suggest",
  "description": "Suggests git commands",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dhairya-k1/Git-Suggest"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-suggest.suggest",
        "title": "Git: Get Suggestions"
      }
    ],
    "configuration": {
      "title": "Git Suggest",
      "properties": {
        "gitSuggest.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python executable used for Git suggestions."
        }
      }
    },
    "keybindings": [
      {
        "command": "git-suggest.suggest",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}